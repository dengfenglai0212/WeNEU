.container{
    padding-left: 30rpx;
    padding-right: 30rpx;
    background-color: #f1f1f1;
    flex: 0;
}
.ks-header{
    display: flex;
    flex-flow: row nowrap;
    justify-content: space-between;
    align-items: center;
    padding: 30rpx 0;
}
.ks-text{
    display: flex;
    flex-flow: column nowrap;
    justify-content: flex-start;
    padding-left: 25rpx;
}
.ks-header-title{
    font-size: 40rpx;
    font-weight: bold;
    line-height: 150%;
    color: #222;
}

.ks-bg{
    display: block;
    width: 200rpx;
    height: 200rpx;
    padding-right: 5rpx;
    opacity: .3;
}

.ks-class-ctn{
    display: flex;
    flex-flow: column nowrap;
    align-items: stretch;
}

.ks-class-item {
    display: flex;
    flex-direction: column;
    font-size: 11pt;
    padding: 0 40rpx;
    margin-bottom: 20rpx;
    background-color: #fff;
    border-radius: 3px;
}
.ks-hd {
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 135rpx;
}

.ks-hd-left {
    display: flex;
    flex-direction: column;
    overflow: hidden;
    padding-right: 30rpx;
}

/**列表展开时标题的颜色变化 **/
.ks-hd-name {
    font-size: 32rpx;
    line-height: 225%;
    letter-spacing: 2rpx;
    transition: color .15s ease-in-out;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}
.ks-item-show .ks-hd-name {
    transition: color .15s ease-in-out;
    color: #505050;
}
.ks-hd-other {
    font-size: 25rpx;
    line-height: 100%;
    color: #aaa;
    padding-bottom: 16rpx;
}

/**列表展开的icon旋转 **/
.ks-item-icon{
    flex-shrink: 0;
    width: 30rpx;
    height: 30rpx;
    transition: transform .2s;
    transform: rotate(0deg);
}
.ks-item-show .ks-item-icon{
    transform: rotate(180deg);
}

.ks-detail {
    display: none;
    flex-direction: column;   
    overflow: hidden;
    padding: 0;
}
.ks-item-show .ks-detail {
    display: flex;
    padding: 5rpx 0 15rpx;
}
.ks-detail-item {
    display: flex;
    align-items: center;
    padding: 25rpx 5rpx 20rpx;
    border-top: 1px solid #eee;
}
.ks-detail-label {
    color: #888;
    width: 55pt;
}
.ks-detail-content {
    flex: 1;
}