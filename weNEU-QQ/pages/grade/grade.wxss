/*顶部容器*/

.grade {
  margin: 20rpx 20rpx 30rpx;
  background-color: #F1F1F1;
}

.header {
  padding: 0.5rem;
  font-size: 40rpx;
  text-align: center;
}

.title {
  display: block;
  justify-content: space-between;
}

.comment {
  margin-top: 0.3rem;
  font-size: 25rpx;
  text-align: center;
}

.info {
  font-size: 30rpx;
  display: flex;
  justify-content: space-between;
  padding-top: 0.5rem;
}

.grade-list {
  display: flex;
  color: #666;
  font-size: 30rpx;
  padding: 0.2rem 0.5rem;
}

.grade-list.select {
  background: #ddd !important;
}

.grade-list:nth-child(2n + 1) {
  background-color: #f8f8f8;
}

.grade-list text {
  padding: 0.1rem;
  display: table-cell;
  flex: 1;
}

.grade-list text:nth-child(1) {
  flex: 4;
}
