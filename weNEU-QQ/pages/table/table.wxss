.lable.td {
  border: 1rpx #dee1e8 solid;
  border-radius: 15rpx;
  box-shadow: 0 10rpx 35rpx #dee1e8;
}

.idx {
  font-size: 30rpx;
  width: 30rpx;
  padding: 10rpx 0rpx 20rpx 0;
}

.idx2 {
  width: 30rpx;
  padding: 10rpx 0rpx 20rpx 0;
}

.ggrid {
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 4;
  line-height: 27rpx;
  height: 100rpx;
  min-height: 100rpx;
  max-height: 100rpx;
}

.ggrid_location {
  width: 100%;
  line-height: 25rpx;
  font-size: 19rpx;
  padding-top: 2rpx;
  border-top: dashed 1rpx #ffffff;
  /* max-height: 40rpx; */
}

.refresh-tip{
  color: #7A7A7A;
}

.card-border-view{
  margin-bottom: 20rpx;
}

/* 新建课程按钮 */
.addCrsBt{
  display: flex;
  flex-direction: row;
  justify-content:  space-around;
  align-items: center;
  margin-top: 16px;
  margin-bottom: 20px;
  height: 15%
}

/* 新建课程输入信息 */
.addCrsInput{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  margin-top: 10px;
  height: 70%
}

.addCrsInput .input-wrapper {
  padding: 1rpx;
  overflow: hidden;
  margin-bottom: 30rpx; 
  font-size: 18px;
  font-weight:bold;
  border-radius: 40rpx;
  border-style: solid;
  width: 85%;
  color: #000000;
  border-width: 4rpx;
  background-color:#f8f8f9;
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.addCrsInput input{
  text-overflow: ellipsis;
  min-height: 100%;
  height: 100%;
}

/* 输入信息单元格的背景 */
.inputCard{
  margin-bottom: 30rpx;
  font-size: 18px;
  font-weight:bold;
  border-radius: 40rpx;
  border-style: solid;
  width: 85%;
  color: #000000;
  border-color: #f8f8f9;
  border-width: 2rpx;
  background-color:#f8f8f9;
  
  display: flex;
  justify-content: space-around;
  align-items: center
}

.line{
  display: flex;
  flex-direction: column;
  width: 2rpx;
  height: 40rpx;
  background-color: #80848f;
}

.line2{
  display: flex;
  flex-direction: column;
  width: 2rpx;
  height: 80rpx;
  margin-right: 22rpx;
  margin-left: 12rpx;
  background-color: #80848f;
}

.button{
  font-size: 18px;
  font-weight:bold;
  border-radius: 40rpx;
  border-style: solid;
  /* height: 65rpx; */
  width: 230rpx;
  color:white;
  border-color: #2196f3;
  border-width: 5rpx;
  background-color:#2196f3;
  
  display: flex;
  justify-content: space-around;
  align-items: center
}

button::after{
  border:none;
}

.deleteButton{
  font-size: 17px;
  /* font-weight:bold; */
  border-radius: 40rpx;
  border-style: solid;
  height: 68rpx;
  width: 150rpx;
  color:#2196f3;
  border-color: #2196f3;
  border-width: 3rpx;
  /* background-color:#2196f3; */
  
  display: flex;
  justify-content: space-around;
  align-items: center
}
.deleteButton::after{
  border:none;
}

.coursetime{
